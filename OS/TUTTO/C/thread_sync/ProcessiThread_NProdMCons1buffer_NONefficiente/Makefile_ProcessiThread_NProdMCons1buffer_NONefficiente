CFLAGS=-ansi -Wpedantic -Wall -D_REENTRANT -D_THREAD_SAFE -D_POSIX_C_SOURCE=200112L

LIBRARIES=-lpthread -lrt

all: 	ProcessiThread_NProdMCons1buffer_NONefficiente.exe

ProcessiThread_NProdMCons1buffer_NONefficiente.exe: ProcessiThread_NProdMCons1buffer_NONefficiente.o DBGpthread.o
	gcc -o ProcessiThread_NProdMCons1buffer_NONefficiente.exe ProcessiThread_NProdMCons1buffer_NONefficiente.o DBGpthread.o ${LIBRARIES}

ProcessiThread_NProdMCons1buffer_NONefficiente.o: ProcessiThread_NProdMCons1buffer_NONefficiente.c DBGpthread.h printerror.h
	gcc -c ProcessiThread_NProdMCons1buffer_NONefficiente.c

DBGpthread.o: DBGpthread.c printerror.h
	gcc -c DBGpthread.c

.PHONY:	clean

clean:
	-rm -f ProcessiThread_NProdMCons1buffer_NONefficiente.o DBGpthread.o ProcessiThread_NProdMCons1buffer_NONefficiente.exe


